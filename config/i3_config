# Basics
set $mod Mod1
floating_modifier $mod
font pango:Terminus 11
bindsym $mod+q kill
bindsym $mod+Shift+r restart
mouse_warping none
#disables window from focusing if mouse is on it
#focus_follows_mouse no

# Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split
bindsym $mod+f split toggle
#bindsym $mod+q layout toggle split

# Fullscreen
bindsym $mod+Shift+f fullscreen toggle

# Floating
bindsym $mod+space floating toggle
bindsym $mod+Shift+space focus mode_toggle

# Focus parent
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move program to another workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Gaps
for_window [class="^.*"] border pixel 3
gaps outer -15
gaps inner 25
#smart border and gaps
#smart_borders on
#smart_gaps on

# Resize windows
bindsym $mod+Shift+y	resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+u	resize grow height 10 px or 10 ppt
bindsym $mod+Shift+i	resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+o	resize grow width 10px or 10 ppt

# Specific screens
workspace 1 output DVI-D-0
workspace 2 output HDMI-1
workspace 4 output HDMI-1
workspace 3 output DP-0
workspace 5 output DP-0
workspace 6 output DVI-D-0

# Switch between workspaces
bindsym $mod+Tab workspace back_and_forth

# Launch floating
for_window [class="Gnome-calculator" instance="gnome-calculator"] floating enable
for_window [class="Gnome-calendar" instance="gnome-calendar"] floating enable
for_window [class="Tor Browser" instance="Navigator"] floating enable
for_window [class="Yad"] floating enable
for_window [class="Steam"] floating enable

# Colors
# Class                     border  backgr. text    indicator child_border
client.focused              #ffffff #ffffff #ffffff #d0d0d0   #458588
client.focused_inactive     #ffffff #ffffff #ffffff #555555   #555555
client.unfocused            #ffffff #ffffff #ffffff #555555   #555555
client.urgent               #ffffff #ffffff #ffffff #555555   #cc241d


# Scratchpad
bindsym $mod+Shift+s move scratchpad
bindsym $mod+s scratchpad show

# Bar
bar {
	status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top
    tray_output primary
    colors {
    focused_workspace  #ffffff #458588
    urgent_workspace #ffffff #cc241d

    }
}

# Dropdown
for_window [instance="notes"] floating enable
for_window [instance="notes"] resize set 800 500
for_window [instance="notes"] move scratchpad
exec --no-startup-id alacritty --class notes -e nvim ~/.cache/notes
bindsym $mod+Shift+w [instance="notes"] scratchpad show ; move position center

# Audio
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
