#!/bin/sh

case $BLOCK_BUTTON in
    1) $TERMINAL -e pulsemixer ;;
    2) pamixer --set-volume 100 ;;
    3) pamixer -t ;; #mutes
    4) pamixer --allow-boost -i 5 ;; #scroll up/down for increase/decrease
    5) pamixer --allow-boost -d 5 ;;
esac



if [ $(pamixer --get-mute) = true ]; then
    icon="ðŸ”‡"
else
    icon="ðŸ”Š"
fi

echo "$icon"
